<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { %>
        <h1>Untitled Page</h1>
        <% } %>

            <!-- Display errors -->
            <% if (errors && errors.length> 0) { %>
                <ul class="notice-list">
                    <% errors.forEach(error=> { %>
                        <li class="notice">
                            <%= error.msg ? error.msg : error %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>

                    <!-- Display flash messages (notice) -->
                    <% if (notice) { %>
                        <div class="flash-message notice bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4 rounded-md"
                            role="alert">
                            <p>
                                <%= notice %>
                            </p>
                        </div>
                        <% } %>

                            <!-- If logged in -->
                            <% if (locals.loggedin) { %>
                                <% const accountData=locals.accountData || {}; %>
                                    <% const accountId=accountData.account_id || '' ; %>
                                        <% const accountType=accountData.account_type || '' ; %>

                                            <!-- Conditional Greeting -->
                                            <h2>Welcome <%= accountData.account_firstname || 'User' %>
                                            </h2>

                                            <!-- Update Account Link -->
                                            <p>
                                                <a href="/account/update-account-info"
                                                    title="Click to update account information">
                                                    Update Account Information
                                                </a>
                                            </p>

                                            <!-- Inventory Management for Employee/Admin Only -->
                                            <% if (accountType==='Employee' || accountType==='Admin' ) { %>
                                                <hr>
                                                <h3>Inventory Management</h3>
                                                <p>
                                                    <a href="/inv" title="Access Inventory Management">Access the
                                                        Inventory Management View</a>
                                                </p>
                                                <% } %>

                                                    <% } else { %>
                                                        <h2>Welcome!</h2>
                                                        <p>You must be logged in to view your account management area.
                                                        </p>
                                                        <% } %>