<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%- include ('../partials/messages') %>

            <!-- Display validation errors, if any -->

            <% if (errors && errors.length> 0) { %>
                <ul class="notice">
                    <% errors.forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>

                    <!-- ============================================== -->

                    <!-- 1. ACCOUNT INFORMATION UPDATE FORM (Name/Email) -->

                    <!-- ============================================== -->

                    <h2 class="mt-4 text-xl font-semibold">Update Account Information</h2>
                    <p>Use this form to update your name or email address.</p>

                    <!-- FIX CONFIRMED: Action is a clean path, NOT including the account ID -->

                    <form id="update-form" action="/account/update" method="POST">

                        <label for="account_firstname">First Name:</label>
                        <input type="text" id="account_firstname" name="account_firstname" required
                            value="<%= account_firstname %>">

                        <label for="account_lastname">Last Name:</label>
                        <input type="text" id="account_lastname" name="account_lastname" required
                            value="<%= account_lastname %>">

                        <label for="account_email">Email:</label>
                        <input type="email" id="account_email" name="account_email" required
                            value="<%= account_email %>">

                        <button type="submit"
                            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-200">Update
                            Account</button>

                        <!-- IMPORTANT: Hidden input to submit the account ID to the controller -->
                        <input type="hidden" name="account_id" value="<%= account_id %>">


                    </form>

                    <hr class="my-8 border-gray-300">

                    <!-- ============================================== -->

                    <!-- 2. PASSWORD CHANGE FORM -->

                    <!-- ============================================== -->

                    <h2 class="mt-4 text-xl font-semibold">Change Password</h2>
                    <p class="text-red-600 font-medium">Warning: Changing your password will log you out immediately.
                    </p>

                    <!-- FIX CONFIRMED: Action is a clean path, NOT including the account ID -->

                    <form id="password-form" action="/account/change-password" method="POST">

                        <label for="current_password">Current Password:</label>
                        <input type="password" id="current_password" name="current_password" required>

                        <label for="new_password">New Password (Min. 12 characters):</label>
                        <input type="password" id="new_password" name="new_password" required
                            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9\s])(?!.*\s).{12,}$"
                            title="Must contain at least 12 characters, including 1 uppercase, 1 number, and 1 special character.">

                        <button type="submit"
                            class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded transition duration-200">Change
                            Password</button>

                        <!-- IMPORTANT: Hidden input to submit the account ID to the controller -->
                        <input type="hidden" name="account_id" value="<%= account_id %>">


                    </form>