<% const inv=locals.inventory || {}; const pageTitle=locals.title || (inv.inv_make && inv.inv_model ? `Edit
    ${inv.inv_make} ${inv.inv_model}` : "Edit Inventory Item" ); const classificationList=locals.classificationList
    || '' ; const errors=locals.errors || []; const messages=locals.messages || {}; %>

    <style>
        /* Global Styling for the View */
        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 2rem;
            font-size: 2.5rem;
            font-weight: 700;
        }

        .notice {
            list-style: none;
            padding: 1rem;
            margin: 1rem auto;
            border-radius: 8px;
            max-width: 700px;
            text-align: left;
            background-color: #ffebeb;
            border: 1px solid #ff4444;
            color: #d8000c;
        }

        .success-notice {
            background-color: #e6f7d9;
            border-color: #79cc30;
            color: #387000;
        }

        .notice li {
            margin-bottom: 0.5rem;
        }

        .form-container {
            max-width: 700px;
            margin: 0 auto;
            padding: 2.5rem;
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .form-container h2 {
            text-align: center;
            color: #007bff;
            margin-bottom: 2rem;
            font-size: 1.8rem;
            border-bottom: 2px solid #007bff;
            padding-bottom: 0.5rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: #555;
        }

        .form-container input[type="text"],
        .form-container input[type="number"],
        .form-container textarea,
        .form-container select {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ccc;
            border-radius: 6px;
            box-sizing: border-box;
            font-size: 1rem;
        }

        .button-primary {
            display: block;
            width: 100%;
            padding: 1rem;
            margin-top: 2rem;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.1s;
        }

        .button-primary:hover {
            background-color: #0056b3;
        }

        .button-primary:active {
            transform: scale(0.99);
        }

        @media (max-width: 768px) {
            .form-container {
                padding: 1.5rem;
                margin: 0 1rem;
            }
        }
    </style>

    <h1>
        <%= pageTitle %>
    </h1>

    <!-- Flash Messages -->
    <% if (messages.success && messages.success.length> 0) { %>
        <ul class="notice success-notice">
            <% messages.success.forEach(msg=> { %>
                <li>
                    <%= msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

            <% if (messages.error && messages.error.length> 0) { %>
                <ul class="notice">
                    <% messages.error.forEach(msg=> { %>
                        <li>
                            <%= msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>

                    <% if (errors.length> 0) { %>
                        <ul class="notice">
                            <% errors.forEach(err=> { %>
                                <li>
                                    <%= err.msg %>
                                </li>
                                <% }) %>
                        </ul>
                        <% } %>

                            <div class="form-container">
                                <h2>Editing <%= inv.inv_make && inv.inv_model ? inv.inv_make + ' ' + inv.inv_model
                                        : 'Inventory Item' %>
                                </h2>

                                <form id="updateForm" action="/inv/update" method="post">

                                    <!-- Classification List -->
                                    <div class="form-group">
                                        <label for="classificationId">Classification:</label>
                                        <%- classificationList %>
                                    </div>

                                    <!-- Make -->
                                    <div class="form-group">
                                        <label for="invMake">Make:</label>
                                        <input type="text" id="invMake" name="inv_make" required
                                            value="<%= inv.inv_make || '' %>" placeholder="Enter Make" maxlength="20">
                                    </div>

                                    <!-- Model -->
                                    <div class="form-group">
                                        <label for="invModel">Model:</label>
                                        <input type="text" id="invModel" name="inv_model" required
                                            value="<%= inv.inv_model || '' %>" placeholder="Enter Model" maxlength="20">
                                    </div>

                                    <!-- Description -->
                                    <div class="form-group">
                                        <label for="invDescription">Description:</label>
                                        <textarea id="invDescription" name="inv_description" required
                                            placeholder="Enter Description"><%= inv.inv_description || '' %></textarea>
                                    </div>

                                    <!-- Image Path -->
                                    <div class="form-group">
                                        <label for="invImage">Image Path:</label>
                                        <input type="text" id="invImage" name="inv_image" required
                                            value="<%= inv.inv_image || '/images/vehicles/no-image.png' %>"
                                            placeholder="Image Path" maxlength="50">
                                    </div>

                                    <!-- Thumbnail Path -->
                                    <div class="form-group">
                                        <label for="invThumbnail">Thumbnail Path:</label>
                                        <input type="text" id="invThumbnail" name="inv_thumbnail" required
                                            value="<%= inv.inv_thumbnail || '/images/vehicles/no-image-tn.png' %>"
                                            placeholder="Thumbnail Path" maxlength="50">
                                    </div>

                                    <!-- Price -->
                                    <div class="form-group">
                                        <label for="invPrice">Price:</label>
                                        <input type="number" id="invPrice" name="inv_price" required
                                            value="<%= inv.inv_price || '' %>" placeholder="Enter Price" min="0"
                                            step="1">
                                    </div>

                                    <!-- Year -->
                                    <div class="form-group">
                                        <label for="invYear">Year:</label>
                                        <input type="number" id="invYear" name="inv_year" required
                                            value="<%= inv.inv_year || '' %>" placeholder="Enter Year" pattern="\d{4}">
                                    </div>

                                    <!-- Miles -->
                                    <div class="form-group">
                                        <label for="invMiles">Miles:</label>
                                        <input type="number" id="invMiles" name="inv_miles" required
                                            value="<%= inv.inv_miles || '' %>" placeholder="Enter Miles" min="0"
                                            step="1">
                                    </div>

                                    <!-- Color -->
                                    <div class="form-group">
                                        <label for="invColor">Color:</label>
                                        <input type="text" id="invColor" name="inv_color" required
                                            value="<%= inv.inv_color || '' %>" placeholder="Enter Color" maxlength="20">
                                    </div>

                                    <!-- Hidden Inventory ID -->
                                    <input type="hidden" name="inv_id" value="<%= inv.inv_id %>">

                                    <button id="updateBtn" type="submit" class="button-primary">Update Vehicle</button>
                                </form>
                            </div>