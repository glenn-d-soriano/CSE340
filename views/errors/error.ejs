<% /* ****************************************** * error.ejs â€” Error Display View
    *******************************************/ %>
    <h1 class="text-4xl font-bold mb-4 text-center text-red-600 border-b pb-2 border-red-300">
        <%= title %>
    </h1>

    <% if (message) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative shadow-md mx-auto max-w-lg"
            role="alert">
            <strong class="font-bold block mb-1">Uh Oh!</strong>
            <p class="block sm:inline">
                <!-- WARNING: Using unescaped EJS code block to display the message! -->
                <%- message %>
            </p>
            <p class="text-sm mt-2">
                It looks like something went wrong. Try going back to the <a href="/"
                    class="underline font-semibold hover:text-red-900">Homepage</a>.
            </p>
        </div>
        <% } else { %>
            <p class="text-center text-xl text-gray-700 mt-8">
                We hit a server error but didn't get a specific message. Hold tight while we fix it!
            </p>
            <% } %>